<% provide(:title, "#{@event.name}") %>
<div class="row">
  <div class="span9">
    <h1 class="underscored"><%= @event.name %></h1>
    <div class="event-description">
      <%= simple_format(@event.description) %>
    </div>
    <div>(social buttons here)</div>
    <h2 class="underscored">Agenda</h2>
    <div class="event-talks">
      <!-- FIXME: Styling is not currently working right -->
      <div class="event-talk">
        <span class="start-time">9:00</span>
        <span class="details"><a href="foo">Talk 1</a> by <a href="user">Speaker 1</a></span>
      </div>
      <div class="event-talk">
        <span class="start-time">10:00</span>
        <span class="details"><a href="foo">Talk 2</a> by <a href="user">Speaker 2</a></span>
      </div>
    </div>
  </div>

  <div class="span3">
    <h3 class="underscored">Location</h3>
    <div class="event-location">
      <%= simple_format(@event.location) %>
    </div>
    <div class="event-map">
      <iframe width="100%" height="200" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/?q=<%= url_encode(@event.location) %>&amp;ie=UTF8&amp;t=m&amp;z=15&amp;output=embed"></iframe>
      <br />
      <small><a href="https://maps.google.com/?q=<%= url_encode(@event.location) %>&amp;ie=UTF8&amp;t=m&amp;z=15&amp;source=embed">View Larger Map</a></small>
      <!--
      FIXME: This should work, add test cases for map_for
      <%= map_for(@event.location) %>
      -->
    </div>
    <h3 class="underscored">Attending</h3>
    <div class="event-registered-users">
      (registered users here)
    </div>
  </div>
</div>
