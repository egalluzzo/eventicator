<%= provide(:title, 'Edit Profile') %>

<div class="row">
  <div class="span8 offset2">
    <h1 class="underscored">Update your profile</h1>
    <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>
      <%= render 'shared/error_messages' %>

      <div class="control-group">
        <label class="control-label">Picture</label>
        <div class="controls">
          <a id="avatar_change_link" href="http://gravatar.com/emails"><%= gravatar_for @user %></a>
          <p class="help-block">This is your Gravatar.  Click on the image to change it.</p>
        </div>
      </div>

      <%= f.input :name,
                  input_html: { class: "input-large" } %>
      <%= f.input :email,
                  input_html: { class: "input-large" } %>
      <%= f.input :password,
                  input_html: { class: "input-small" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation",
                  input_html: { class: "input-small" } %>

      <div class="form-actions">
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
