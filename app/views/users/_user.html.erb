<li>
  <%= gravatar_for user, size: 30 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to user, method: :delete,
                      title: "Delete",
                      data: { confirm: "Are you sure you want to delete this user?" } do %>
      <i class="icon-trash"></i>
    <% end %>
  <% end %>
</li>

