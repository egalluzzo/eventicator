<% if signed_in_as_admin? || post.user == current_user %>
  <div class="management-icons">
    <%= link_to edit_post_path(post), id: "edit-post-#{post.id}", title: "Edit Post" do %>
      <i class="icon-pencil"></i>
    <% end %>
    <%= link_to post,
                method: :delete,
                id: "delete-post-#{post.id}",
                title: "Delete Post",
                data: { confirm: "Are you sure you want to delete this post?" } do %>
      <i class="icon-trash"></i>
    <% end %>
  </div>
<% end %>
